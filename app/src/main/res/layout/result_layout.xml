<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/logo"
        android:src="@drawable/logo_result"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="8pt"
        android:text="This is your result:"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="8pt"
        android:layout_marginTop="15dp"
        android:text="Very Easy : 10/10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="8pt"
        android:text="Easy: 10/10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="8pt"
        android:text="Difficutl : 10/10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="8pt"
        android:text="Very Difficutl : 10/10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="8pt"
        android:layout_marginTop="15dp"
        android:text="Total : 40/40"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/reviewTest"
            android:layout_width="172dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_result"
            android:text="REVIEW"
            android:textColor="@color/colorTextBtn"/>
        <Button
            android:id="@+id/home"
            android:layout_width="172dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_result"
            android:text="HOME"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorTextBtn"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Never give up"
            android:textSize="7pt"/>
    </LinearLayout>
</LinearLayout>