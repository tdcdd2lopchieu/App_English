<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nhom3.project.ListTestActivity"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_margin="@dimen/margin40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please choose your package"
            android:textSize="20dp"
            android:textColor="black"/>

        <GridView
            android:id="@+id/testGrid"
            android:layout_width="wrap_content"
            android:layout_height="241dp">

        </GridView>

        <Button
            android:id="@+id/submit"
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_text_border"
            android:text="Start"
            android:backgroundTint="@color/colorBtn"
            android:textColor="@color/colorTextBtn"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Never give up"
            android:textSize="7pt"/>
    </LinearLayout>
</LinearLayout>
