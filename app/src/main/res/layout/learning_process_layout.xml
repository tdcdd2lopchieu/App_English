<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.nhom3.project.LearningProcessActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="@dimen/margin10dp"

        >

        <ImageView
            android:id="@+id/imgHi"
            android:layout_width="@dimen/img_width"
            android:layout_height="@dimen/img_height"
            android:scaleType="centerCrop"
            android:src="@drawable/hii_image"
            android:layout_marginRight="@dimen/margin10dp"
            android:layout_marginLeft="@dimen/margin5dp"
            />

        <EditText
            android:id="@+id/edtUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:layout_marginLeft="@dimen/margin20dp"
            android:layout_marginRight="@dimen/margin50dp"
            android:text="@string/user_name"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:textColor="#0800ff"
        android:text="This is learning process"
        android:textSize="@dimen/textTitleSize"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_margin="@dimen/margin10dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/imgTotalTest"
            android:layout_width="@dimen/margin40dp"
            android:layout_height="@dimen/margin40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pen"
            android:layout_marginRight="@dimen/margin10dp"
            android:layout_marginLeft="@dimen/margin20dp"
            />

        <TextView
            android:id="@+id/txtTotalTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin20dp"
            android:layout_marginRight="@dimen/margin10dp"
            android:textSize="@dimen/textTitleSize"
            android:text="@string/total_test"
            android:textColor="#0800ff"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_margin="@dimen/margin10dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/imgHighestScore"
            android:layout_width="@dimen/margin40dp"
            android:layout_height="@dimen/margin40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_offline_pin_black_24dp"
            android:layout_marginRight="@dimen/margin10dp"
            android:layout_marginLeft="@dimen/margin20dp"
            />

        <TextView
            android:id="@+id/txtHighestScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin20dp"
            android:layout_marginRight="@dimen/margin10dp"
            android:textSize="@dimen/textTitleSize"
            android:text="@string/highest_score"
            android:textColor="#0800ff"
            />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btnLearnPRC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:background="@drawable/edit_text_border"
            android:text="Choose Test"
            android:backgroundTint="@color/colorBtn"
            android:textColor="@color/colorTextBtn"/>
    </LinearLayout>

</LinearLayout>
